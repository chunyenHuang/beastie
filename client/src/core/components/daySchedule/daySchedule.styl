$grayLight = #e3e3e3
$grayMedium = #808080
#day-schedule
    position relative
    color: $grayMedium
    border: 1px solid $grayLight

    div.grid
        text-align center
        height: 100%
        min-height 100px
        display: inline-block
        width: 49px
        border-right 1px solid $grayLight
        .header
            font-size 1em
            font-weight bold
            height: 29px
            line-height 29px
            border-bottom 1px solid $grayLight
    div.day-schedule-event
        position absolute
        // height 9px
        // width 199px
        border-right 1px solid $grayLight
        border-bottom 1px solid $grayLight

#day-schedule-events
    width: 100%
    height 100%
    position absolute
    left 0px
    top 30px
