@import "~variable"
$highlight = #ff0000
[ng-click]:focus
    outline: none
    border: 0

#core
    md-dialog
        md-subheader
            margin-bottom: 15px
        max-height: 90vh
        md-input-container
            margin 0
            margin-left: 20px
            padding-left: 20px
    .sidenav
        // background-color: $bgColor
        margin-top: -30px
        padding: 30px
        md-icon
            display: block
            margin: 50px 0px 0px 0px
            transform: scale(2, 2);
            color: #fff2d6
        md-icon:hover
            color: #ffffff
        md-icon:focus
            outline: none
            border: 0
    .highlight-menu-item
        position: relative
    .highlight-menu-item:after
        color $highlight
        font-size: 30px
        content: "â€¢";
        position: absolute;
        top: -9px;
        right: 7px;
        width: 0;
        height: 0;
        display: block;
