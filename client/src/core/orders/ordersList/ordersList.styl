@import "~variable"
md-toast .md-toast-content span.md-toast-text
    font-size 200%
    text-align center
[aria-label="paid by cash"], [aria-label="confirm CANCEL"], [aria-label="confirm NO-SHOW"]
    font-size 24px
    md-dialog-actions
        padding 0px 8px
        button
            margin 8px 4px
            font-size 24px
            width 50%
            height 100px
#order-list
    .animate-show.ng-hide-add 
        transition: all linear 0.75s;
    .animate-show.ng-hide-remove
        transition: all linear 0.5s;
    .animate-show.ng-hide 
        opacity: 0;

    .label-rush::after
        content: "RUSH";
        position: absolute;
        left: 0px;
        top: 0px;
        width: 20%;
        word-wrap: break-word;
        background-color: rgb(255,138,101);
        font-size: 40%;
        line-height: 90%;
        text-align: center;
        padding 2px 2px
    
    img
        max-height: 150px
        max-width: 150px
    .tile-pets-name
        background-color: rgba(255,255,255,0.5);
        position: absolute;
        bottom: 0px;
        left: 0px;
        width: 100%;
        text-align: center;
        padding-bottom: 6px;
        
    // md-grid-list md-grid-tile::before, md-grid-list md-grid-tile::after
    //     content: '';
