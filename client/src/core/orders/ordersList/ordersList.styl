.selected_date_mode 
    border solid 3px
    
#box::after {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    border-color: transparent;
    border-style: solid;
}

#box::after {
    border-width: 1.35em;
    border-right-color: #0c0;
    border-top-color: #0c0;
}

